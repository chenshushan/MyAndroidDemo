<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.chen.myapplication.layout.LayoutActivity">

    <Button
            android:text="相对布局"
            android:onClick="btnTurnToRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="32dp" android:layout_marginTop="14dp"
            android:id="@+id/button2"/>
    <Button
            android:onClick="btnTurnToLinear"
            android:text="线性布局"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" android:id="@+id/button" android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2" android:layout_alignParentStart="true"/>
    <Button
            android:text="网格布局"
            android:onClick="btnTurnToGird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/button"
            android:layout_alignStart="@+id/button" android:layout_marginTop="43dp" android:id="@+id/button3"/>
    <Button
            android:text="帧布局"
            android:onClick="btnTurnToFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBottom="@+id/button3"
            android:layout_alignStart="@+id/button2" android:id="@+id/button4"/>
    <Button
            android:text="ListView"
            android:onClick="btnTurnTolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/button3"
            android:layout_alignStart="@+id/button3" android:layout_marginTop="47dp" android:id="@+id/button5"/>
    <Button
            android:text="GridView"
            android:onClick="btnTurnToGridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBottom="@+id/button5"
            android:layout_alignStart="@+id/button4" android:id="@+id/button6"/>
    <Button
            android:onClick="btnTurnToFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7" android:layout_below="@+id/button5" android:layout_alignStart="@+id/button5"
            android:layout_marginTop="54dp" android:text="Fragment"/>
    <Button
            android:text="BMenu"
            android:onClick="btnTurnToBMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBottom="@+id/button7"
            android:layout_alignStart="@+id/button6" android:id="@+id/button8"/>
    <Button
            android:text="侧滑菜单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_marginTop="44dp" android:layout_below="@+id/button7"
            android:layout_alignStart="@+id/button7" android:layout_alignEnd="@+id/button7"/>
</RelativeLayout>
