<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.chen.myapplication.app.NewsActivity">
    <com.example.chen.myapplication.app.view.TitleView android:layout_width="match_parent" android:id="@+id/title_news"
                                                       android:layout_height="wrap_content">
    </com.example.chen.myapplication.app.view.TitleView>
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent" android:layout_below="@+id/title_news"
                                            android:layout_height="match_parent" android:id="@+id/rv_news">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
