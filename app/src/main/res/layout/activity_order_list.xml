<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.chen.myapplication.app.OrderActivity">

    <TextView
            android:id="@+id/tv_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="还没有订单，快去下单吧"
            android:textColor="#000"
            android:textSize="18sp" />
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent" android:id="@+id/rv_orders"
                                            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
