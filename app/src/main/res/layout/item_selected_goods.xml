<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#fff"
    android:layout_marginTop="1dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView android:textSize="16sp"
            android:text="商品名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvName" />
    <TextView android:textSize="16sp" android:textColor="#ffff8800"
            android:text="￥ 100" android:layout_gravity="right"   android:layout_toLeftOf="@+id/nums_change" android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCost" />
    <LinearLayout android:gravity="right" android:layout_alignParentRight="true" android:id="@+id/nums_change"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <TextView android:clickable="true"   android:background="@mipmap/button_minus" android:gravity="center" android:textStyle="bold"
                android:layout_width="20dp"
                android:layout_height="20dp" android:id="@+id/tvMinus" />
        <TextView
                android:text="0" android:minWidth="20dp" android:layout_gravity="center_vertical" android:textSize="16sp" android:gravity="center"
                android:layout_width="wrap_content" android:id="@+id/count"
                android:layout_height="wrap_content" />
        <TextView android:clickable="true"  android:textStyle="bold" android:gravity="center"
                android:layout_width="20dp" android:background="@mipmap/button_add"
                android:layout_height="20dp" android:id="@+id/tvAdd" />
    </LinearLayout>
</RelativeLayout>